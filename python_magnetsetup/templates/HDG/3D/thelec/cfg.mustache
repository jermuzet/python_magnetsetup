directory={{method}}-{{model}}{{geom}}-{{time}}-{{linear}}/{{name}}
case.dimension={{dim}}
case.discretization=P1

[exporter]
element-spaces=P0

[electric]
filename=$cfgdir/{{jsonfile}}
pc-type=gasm
sub-pc-factor-mat-solver-package-type=umfpack
sub-pc-type=lu
ksp-rtol=1e-14
ksp-monitor=true
use-sc=true
backend.rebuild=true

[electric.sc]
ksp-monitor=true
pc-type=gamg
ksp-rtol=1e-12
backend.rebuild=true

[sc]
ibc_partitioning=true
ibc_partitioning.marker=V1

[heat]
filename=$cfgdir/{{jsonfile}}
pc-type=gasm
sub-pc-factor-mat-solver-package-type=umfpack
sub-pc-type=lu
ksp-rtol=1e-14
ksp-monitor=true
use-sc=true
backend.rebuild=true

[heat.sc]
ksp-monitor=true
pc-type=gamg
ksp-rtol=1e-12
backend.rebuild=true

[thermoelectric]
tolerance=1e-8
itmax=20
continuation=false

[thermoelectric.continuation]
steps=1
marker=V1

[gmsh]
filename=$cfgdir/test.med
# gmsh.scale = {{scale}}
partition={{partition}}